@import 'colors.styl'

/* common */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  overflow-x: hidden;
  font-family: Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.2;
}
h1,
h2,
h3,
h4,
h5,
h6,
p,
span {
  margin: 0;
  padding: 0;
  font-weight: normal;
}

/* section */

.section {
  width: 100%;
  overflow-x: hidden;
  background-color: #000;
  color: #eaeaea;
  border-bottom: 1px solid rgba(255, 255, 255, .5);
}

.section-wrapper {
  margin: 0 auto;
  padding: 40px 20px;
  max-width: 700px;
  background-color: #3d3d3d;
}

.section-wrapper-wide {
  padding: 0;
  max-width: 100%;
  background-color: #3c3c3c;
}

.section-wrapper-scrollable {
  max-width: 100%;
  overflow-x: auto;
}

/* container */

.container {
  padding: 40px 20px;
  display: flex;
  justify-content: space-around;
}
.container-aligned-left {
  /*text-align: left;*/
  flex-direction: row-reverse;
}
.container-aligned-right {
  flex-direction: row;
}
.container-light {
  color: #282828;
  background-color: #aeaeae;
}
.container-dark {
  color: #aeaeae;
  background-color: #282828;
}

/* container block */

.block {
  flex: 0 0 50%;
}
.block-image {
  background-color: rgba(28, 28, 28, .3);
}
.block-content {
  padding: 20px 10px;
  background-color: rgba(128, 128, 128, .3);
}

/* block items */

.block-title {
  margin: 0 0 5px 0;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 20px;
  font-weight: bolder;
}
.block-subtitle {
  margin: 0 0 10px 0;
  font-size: 16px;
  font-style: italic;
}
.block-text {
  margin: 0 0 5px 0;
  font-size: 14px;
}
.block-subtext {
  opacity: .7;
  font-size: 12px;
}
