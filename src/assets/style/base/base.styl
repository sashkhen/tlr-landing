@import 'colors.styl'
@import 'fonts.styl'
@import 'sizes.styl'

*
  margin: 0
  padding: 0
  box-sizing: border-box
html
  background-color: $black
  -webkit-font-smoothing: antialiased

body
  overflow-x: hidden
  font-family: 'Montserrat', 'Lato', Helvetica, Arial, sans-serif
  font-size: $textDefault
  line-height: 1.2

h1
h2
h3
h4
h5
h6
p
span
  margin: 0
  padding: 0
  font-weight: normal

a
  color: inherit
  text-decoration: none
  cursor: pointer

button
  cursor: pointer
  outline: none
