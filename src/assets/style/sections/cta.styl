@import '../base/colors.styl'

$padding = 32px
$transitionSpeed = .3s
$transitionTiming = ease-out

.section-cta
  color: $white

  .section-wrapper
    text-align: center

  .cta
    display: inline-block
    padding: $padding ($padding * 2)
    border-radius: 8px
    border: 4px solid $butterscotch
    color: $butterscotch
    transition: background-color $transitionSpeed $transitionTiming

    &:hover
      background-color: $butterscotch
      color: $black

    .action
      margin: ($padding / 2)
      font-size: 32px
      font-weight: 600

    .cursive
      margin: ($padding / 4)
      color: $white
      font-style: italic
