@import '../base/colors.styl'
@import '../base/sizes.styl'

$widthImage = 70%
$widthText = 45%
$widthGap = 33% // TODO: fix magical num
$gradientStart = rgba($black, 0)
$gradientEnd = rgba($black, 1)
$mobileOverlapping = -50px

.section-info
  margin: 100px 0
  overflow-x: visible

  .section-wrapper
    display: flex
    justify-content: flex-start
    align-items: center

.section-info-left
  .section-wrapper
    flex-direction: row
    +below($bp)
      flex-direction: column

  .img-shadow
    background: linear-gradient(to left, $gradientEnd, $gradientStart)

.section-info-right
  .section-wrapper
    flex-direction: row-reverse
    +below($bp)
      flex-direction: column

  .img-shadow
    background: linear-gradient(to left, $gradientStart, $gradientEnd)

.section-info
  .info-image
    flex: 0 0 $widthImage
    position: relative
    +below($bp)
      flex: 1 1 1

  .info-text
    flex: 0 0 $widthText
    +below($bp)
      flex: 1 1 1

    .text-title
      margin: 0 0 24px
      font-size: $textTitle
      font-weight: 600

    .text-description
      // TODO: wrong font
      font-family: 'WorkSans', Helvetica, Arial, sans-serif
      font-size: $textSubtitle

.section-info-left
  .info-text
    transform: translateX(- $widthGap)
    +below($bp)
      transform: translateX(0)
      margin-top: $mobileOverlapping

.section-info-right
  .info-text
    transform: translateX($widthGap)
    +below($bp)
      transform: translateX(0)
      margin-top: $mobileOverlapping

.img.img-info
.video.video-info
  display: block
  width: 100%

.img-shadow
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
