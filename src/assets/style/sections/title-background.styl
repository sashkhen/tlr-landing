@import '../base/colors.styl'
@import '../base/sizes.styl'

.section-title
  .head
    position: fixed
    top: 0
    width: 100%
    height: 100vh

  .head--bg
    position: absolute
    top: 0
    bottom: 50%
    left: -10%
    right: -10%
    background-repeat: no-repeat
    background-position: center
    background-size: cover

  .head--bg-back
    background-image: url('../../images/title-background/back.png')

  .head--bg-front
    background-image: url('../../images/title-background/front.png')

  .head--bg-g-off
    background-image: url('../../images/title-background/girlyanda-off.png')

  .head--bg-g-on
    background-image: url('../../images/title-background/girlyanda-on.png')
    animation: opacity .5s ease-out infinite alternate

  .head--bg-alert
    background-image: url('../../images/title-background/trevoga.png')
    animation: opacity .5s ease-out infinite alternate

  .head--bg-dark
    background-color: rgba(0,0,0, .5)
    animation: opacity .5s ease-out .5s infinite alternate

@-webkit-keyframes opacity
  0%   {opacity:1;}
  100% {opacity:0;}

@keyframes opacity
  0%   {opacity:1;}
  100% {opacity:0;}
